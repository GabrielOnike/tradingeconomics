<div class="container">
  <div class="row">
    <div class="">
        <h3>Select a Country to see its GDP for the last 30 years </h3>

        <div class="dropdown mt-3 mb-2" >
            <label for="users" class="btn btn-secondary dropdown" data-bs-toggle="dropdown" >Country </label>
                <select id="countries" name="users" class="dropdown" aria-labelledby="dropdownMenuButton">
                <option value=""><a class="dropdown-item" type="checkbox" class="hidden_checkbox" id="show_hide">SELECT</a></option>
                <option value="Sweden"><a class="dropdown-item" type="checkbox" class="hidden_checkbox" id="show_hide">Sweden</a></option>
                <option value="Mexico">Mexico</option>
                <option value="Thailand">Thailand</option>
                <option value="New Zealand">New Zealand</option>
            </select>
        </div>
    </div>
    <div class="" style="max-height: clamp(20em,200vh,700px); overflow: auto;">
      <table class="table table-dark" >
        <thead class="sticky-top bg-black">
          <tr>
            <th scope="col" class="th-sm">Country</th>
            <th scope="col" class="th-sm">Frequency</th>
            <!-- <th scope="col">Imports</th> -->
            <th scope="col" class="th-sm">GDP</th>
            <th scope="col" class="th-sm">Date</th>
          </tr>
        </thead>
        <tbody >
          {{#each indData}}
          <tr>
            <th scope="row">{{indicator.Country}}</th>
            <td>{{indicator.Frequency}}</td>
            <td>{{indicator.Value}}</td>
            <td>{{ prettifyDate indicator.DateTime }}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>

